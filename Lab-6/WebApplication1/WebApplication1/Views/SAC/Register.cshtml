@{
    ViewData["Title"] = "SAC Registration";
}
<div id="registration-container">
    <h2>SAC Registration</h2>
    <form id="sac-registration-form">
        <div class="form-group">
            <label for="sac-name">Name</label>
            <input type="text" id="sac-name" name="sac-name" class="form-control" placeholder="Enter name" required />
        </div>
        <div class="form-group">
            <label for="sac-id">SAC ID</label>
            <input type="text" id="sac-id" name="sac-id" class="form-control" placeholder="Enter SAC ID" required />
        </div>
        <div class="form-group">
            <label for="role">Role</label>
            <input type="text" id="role" name="role" class="form-control" placeholder="Enter Role" required />
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required />
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
